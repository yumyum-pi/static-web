{
  "name": "static-website",
  "version": "1.0.0",
  "description": "A boilerplate for creating a static website",
  "main": "src/index.js",
  "scripts": {
    "css": "npx tailwindcss build -i ./src/main.css -o public/css/output.css",
    "build": "NODE_ENV=production npx tailwindcss build -i ./src/main.css -m -o public/css/output.css",
    "dev": "nodemon --watch ./src src/index.js",
    "start": "NODE_ENV=production node src/index.js"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yumyum-pi/static-website.git"
  },
  "author": "Vivek Rawat",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/yumyum-pi/static-website/issues"
  },
  "homepage": "https://github.com/yumyum-pi/static-website#readme",
  "devDependencies": {
    "autoprefixer": "^10.3.4",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-minify": "^1.0.0",
    "postcss": "^8.3.6",
    "tailwindcss": "^2.2.9",
    "nodemon": "^3.0.1"
  }
}
